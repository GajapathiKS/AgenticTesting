{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "agent/**/*.ts",
    "analysis/**/*.ts",
    "locators/**/*.ts",
    "reporting/**/*.ts",
    "tests/**/*.ts",
    "mcp/**/*.ts",
    "llm/**/*.ts",
    "config/**/*.ts",
    "types/**/*.d.ts"
  ]
}
